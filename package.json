{
  "name": "ganttviewer",
  "displayName": "GanttViewer",
  "description": "",
  "version": "0.0.2",
  "publisher": "fasgudev",
  "engines": {
    "vscode": "^1.108.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasgudev/gantt-viever-vscode.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gantt.previewFromCsv"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ganttviewer.previewFromCsv",
        "title": "Gantt: Preview from CSV"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ganttviewer.previewFromCsv",
          "when": "resourceExtname == .csv",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Gantt Viewer",
      "properties": {
        "ganttviewer.dateFormat": {
          "type": "string",
          "default": "YYYY-MM-DD",
          "enum": [
            "YYYY-MM-DD",
            "DD-MM-YYYY",
            "MM-DD-YYYY",
            "DD/MM/YYYY",
            "MM/DD/YYYY"
          ],
          "enumDescriptions": [
            "Año-Mes-Día (2024-01-31)",
            "Día-Mes-Año (31-01-2024)",
            "Mes-Día-Año (01-31-2024)",
            "Día/Mes/Año (31/01/2024)",
            "Mes/Día/Año (01/31/2024)"
          ],
          "description": "Formato de fecha para el CSV"
        },
        "ganttviewer.delimiter": {
          "type": "string",
          "default": ",",
          "enum": [
            ",",
            ";"
          ],
          "enumDescriptions": [
            "Coma (,)",
            "Punto y coma (;)"
          ],
          "description": "Delimitador de columnas del CSV"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}